	ui = true
[user]
	name = Brian Phillips
	email = bphillips@shutterstock.com
[github]
	user = brianphillips
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[rerere]
	enabled = true
[push]
	default = current
[alias]
	merged = branch --merged
	contains = branch --contains
	merge-into = "!f() { git checkout $1 && git pull && git merge @{-1} && git checkout @{-1}; }; f"
	ctags = !.git/hooks/ctags
	recent = for-each-ref --sort=-committerdate refs/heads/ --format='%(committerdate:short) %(authorname) %(authoremail) %(refname:short)'
[init]
	templatedir = ~/.git_template
[include]
	path = ~/.gitconfig.local
